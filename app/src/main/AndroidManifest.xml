<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdtv.player">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.TYPE_APPLICATION_OVERLAY" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayerDemo">
        <activity android:name=".MainActivity">
        </activity>

        <activity android:name=".HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Demo2Activity"/>
        <activity android:name=".Demo3Activity"/>
        <activity android:name=".Demo4Activity"/>
        <activity android:name=".Demo5Activity"/>
        <activity android:name=".Demo6Activity"
            android:launchMode="singleTask"
            />
        <service android:name=".MybgService"/>
        <service android:name=".LockScreenService"/>
        <activity android:name=".LockScreenActivity"
            android:launchMode="singleInstance"
            android:taskAffinity="com.sdtv.lock"
            android:excludeFromRecents="true"
            android:exported="false"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/LockScreenTheme"
            />
        <activity android:name=".MusicPlayerActivity"/>
        <service android:name=".MusicPlayerService"/>
    </application>

</manifest>